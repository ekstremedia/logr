{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Logr",
  "version": "0.1.0",
  "identifier": "com.logr.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Logr",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "A modern, beautiful log tailing application",
    "longDescription": "Logr is a cross-platform log viewer with real-time tailing, multi-window support, syntax highlighting, and notification features. Built for developers who need to monitor multiple log files efficiently.",
    "copyright": "MIT License",
    "licenseFile": "../LICENSE"
  },
  "plugins": {}
}
